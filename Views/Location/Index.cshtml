@model IEnumerable<TakvimOdevi.Models.Location>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Locations</h1>
@if (ViewData["Alert"] != null)
{
    <h3>@ViewData["Alert"]</h3>
}
<div class="mt-3">
    <a asp-action="Create" class="btn btn-primary text-center">Create New</a>
</div>
<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>